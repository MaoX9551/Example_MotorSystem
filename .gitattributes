# 源代码文件，统一换行符
*.cpp   text eol=lf
*.h     text eol=lf
*.c     text eol=lf
*.cs    text eol=lf
*.py    text eol=lf
*.java  text eol=lf
# 配置文件
*.ini   text eol=lf
*.txt   text eol=lf
*.md    text eol=lf
# Unreal/Unity 资源文件用 LFS 管理
*.uasset filter=lfs diff=lfs merge=lfs -text
*.umap   filter=lfs diff=lfs merge=lfs -text
*.fbx    filter=lfs diff=lfs merge=lfs -text
*.png    filter=lfs diff=lfs merge=lfs -text
*.jpg    filter=lfs diff=lfs merge=lfs -text
*.wav    filter=lfs diff=lfs merge=lfs -text
# Visual Studio/JetBrains Rider 工程文件
*.sln   text eol=crlf
*.vcxproj text eol=crlf
*.csproj text eol=crlf
# 忽略二进制文件的文本差异
*.dll   binary
*.exe   binary
*.lib   binary
*.pdb   binary
*.ussset filter=lfs diff=lfs merge=lfs -text
